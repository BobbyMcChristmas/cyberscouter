<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelePage">

    <Button
        android:id="@+id/button_Previous"
        android:layout_width="173dp"
        android:layout_height="95dp"
        android:text="@string/PreviousButton"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="173dp"
        android:layout_height="95dp"
        android:text="@string/NextButton"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.961"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="344dp"
        android:text="@string/CurrentMatch"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.294"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_roleTag" />

    <TextView
        android:id="@+id/textView_teamNumber"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="344dp"
        android:text="@string/CurrentTeam"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView_roleTag" />

    <TextView
        android:id="@+id/textView_roleTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Tele-op"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Reset_button"
        android:layout_width="173dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:text="@string/ResetButton"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_next"
        app:layout_constraintStart_toEndOf="@+id/button_Previous" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="1031dp"
        android:layout_height="503dp"
        app:layout_constraintBottom_toTopOf="@+id/Reset_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_roleTag"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/field_2020" />

    <Button
        android:id="@+id/zone_3"
        android:layout_width="400dp"
        android:layout_height="468dp"
        android:alpha=".5"
        android:background="#8B4513"
        android:text="3"
        android:fromDegrees="10"
        app:layout_constraintBottom_toTopOf="@+id/zone_5"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/zone_1"
        android:layout_width="84dp"
        android:layout_height="114dp"
        android:layout_weight="1"
        android:alpha=".5"
        android:background="#FFFF00"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@id/imageView8"
        app:layout_constraintBottom_toTopOf="@+id/Reset_button"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@id/imageView8"
        app:layout_constraintVertical_bias="0.266" />

    <Button
        android:id="@+id/zone_5"
        android:layout_width="373dp"
        android:layout_height="234dp"
        android:alpha=".5"
        android:background="#00ff00"
        android:rotation="45"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/Reset_button"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/zone_1"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/zone_4"
        android:layout_width="342dp"
        android:layout_height="448dp"
        android:layout_marginBottom="44dp"
        android:alpha=".5"
        android:background="#AFEEEE"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/Reset_button"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toEndOf="@+id/zone_5"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/zone_2"
        android:layout_width="161dp"
        android:layout_height="92dp"
        android:alpha=".5"
        android:background="#FFc0cb"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/zone_3"
        app:layout_constraintEnd_toEndOf="@+id/zone_4"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toEndOf="@+id/zone_1"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.039" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="275dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.978"
        app:layout_constraintStart_toEndOf="@+id/textView_roleTag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028">

        <Chronometer
            android:id="@+id/Stage_2"
            android:layout_width="227dp"
            android:layout_height="68dp"
            android:textSize="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startStage_2"
            android:text="Start" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pauseStage_2"
            android:text="success" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="resetStage_2"
            android:text="failure" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_btIndicator"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/logo_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/background_light" />

    <Button
        android:id="@+id/zone_6"
        android:layout_width="78dp"
        android:layout_height="100dp"
        android:alpha=".5"
        android:background="#FFFF00"
        android:text="1" />

    <Button
        android:id="@+id/zone_7"
        android:layout_width="379dp"
        android:layout_height="468dp"
        android:alpha=".5"
        android:background="#FFc0cb"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toEndOf="@+id/zone_9"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/zone_8"
        android:layout_width="151dp"
        android:layout_height="78dp"
        android:background="#8B4513"
        android:text="3"
        tools:layout_editor_absoluteX="537dp"
        tools:layout_editor_absoluteY="503dp" />

    <Button
        android:id="@+id/zone_9"
        android:layout_width="405dp"
        android:layout_height="474dp"
        android:alpha=".5"
        android:background="#AFEEEE"
        android:text="4"
        tools:layout_editor_absoluteX="-163dp"
        tools:layout_editor_absoluteY="135dp" />

    <Button
        android:id="@+id/zone_10"
        android:layout_width="302dp"
        android:layout_height="208dp"
        android:alpha=".5"
        android:background="#00ff00"
        android:rotation="45"
        android:text="5"
        tools:layout_editor_absoluteX="662dp"
        tools:layout_editor_absoluteY="105dp" />


</android.support.constraint.ConstraintLayout>